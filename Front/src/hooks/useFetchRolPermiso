import { useState, useEffect } from 'react';

const useRolPermiso = () => {
  // FunciÃ³n para guardar permisos asignados a un rol
  const guardarRolPermiso= async (selected_ID, selected_permisos) => {
    try {
      const response = await fetch('http://localhost:3000/RolPer', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          rolId: selected_ID,
          permisos: selected_permisos,
        }),
      });

      if (!response.ok) {
        throw new Error('Error al guardar los permisos');
      }

      const data = await response.json();
      return data;
    } catch (error) {
      console.error('Error en handleGuardarRolPermiso:', error);
      throw error;
    }
  };

  return { guardarRolPermiso };
};

export default useRolPermiso;
